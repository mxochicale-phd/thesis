\@ifclassloaded{article}
 {\global\let\chapter\section
  \global\let\section\subsection
  \global\let\subsection\subsubsection
  \global\renewcommand\subsubsection%        %% From \subsubsection
   {\@startsection{subsubsection}{3}{\z@}%   %%  in article.cls
      {-3.25ex\@plus -1ex \@minus -.2ex}%    %%
      {1.5ex \@plus .2ex}%                   %%
      {\normalfont\normalsize\itshape}}      %% Changed to \itshape
  \global\let\l@chapter\l@section
  \global\newcommand\bibname{\refname}
  \PackageWarningNoLine{bhamthesisfill}%
    {Support for LaTeX article class activated.\MessageBreak
     \noexpand\chapter and \noexpand\section and
      \noexpand\subsection are\MessageBreak
     interpreted as \noexpand\section and
      \noexpand\subsection and\MessageBreak
     \noexpand\subsubsection respectively.\MessageBreak
     ** \noexpand\subsubsection is redefined to use\MessageBreak
     the same counter as \noexpand\subsection **}}{}
